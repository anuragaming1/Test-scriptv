-- Script fix lag, xóa sương mù, tăng FPS trong Roblox local function optimizeGame() -- Tắt sương mù if game.Lighting:FindFirstChild("FogEnd") then game.Lighting.FogEnd = 1000000 end

-- Giảm chất lượng đồ họa
settings().Rendering.QualityLevel = Enum.QualityLevel.Level1

-- Tắt tất cả hiệu ứng hình ảnh
for _, v in pairs(game.Lighting:GetChildren()) do
    if v:IsA("PostEffect") or v:IsA("BloomEffect") or v:IsA("BlurEffect") or v:IsA("SunRaysEffect") or v:IsA("ColorCorrection") then
        v:Destroy()
    end
end

-- Giảm độ phân giải của bóng
settings().Rendering.ShadowQuality = Enum.ShadowQuality.Off

-- Xóa các phần tử liên quan đến môi trường (cây, đất, v.v.)
for _, v in pairs(game.Workspace:GetDescendants()) do
    if v:IsA("Part") or v:IsA("MeshPart") then
        if v.Name:lower():find("tree") or v.Name:lower():find("grass") or v.Name:lower():find("ground") or v.Name:lower():find("rock") then
            v:Destroy()
        else
            v.Material = Enum.Material.SmoothPlastic
            v.Reflectance = 0
        end
    end
end

-- Biến nhân vật thành màu xám
game.Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(character)
        for _, part in pairs(character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Color = Color3.fromRGB(128, 128, 128) -- Màu xám
            end
        end
    end)
end)

-- Hiển thị logo và tên "Anura Gaming" trên màn hình
game.Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(character)
        local gui = Instance.new("ScreenGui")
        gui.Parent = player:FindFirstChild("PlayerGui")
        
        local textLabel = Instance.new("TextLabel")
        textLabel.Parent = gui
        textLabel.Size = UDim2.new(1, 0, 0.1, 0)
        textLabel.Position = UDim2.new(0, 0, 0, 0)
        textLabel.BackgroundTransparency = 1
        textLabel.Text = "Anura Gaming"
        textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
        textLabel.TextScaled = true
        textLabel.Font = Enum.Font.SourceSansBold
        
        local imageLabel = Instance.new("ImageLabel")
        imageLabel.Parent = gui
        imageLabel.Size = UDim2.new(0, 100, 0, 100)
        imageLabel.Position = UDim2.new(0.5, -50, 0.05, 0)
        imageLabel.BackgroundTransparency = 1
        imageLabel.Image = "rbxassetid://14190262721"
    end)
end)

print("Tối ưu hóa hoàn tất! Đã xóa môi trường, chỉnh nhân vật thành màu xám và thêm logo + tên Anura Gaming.")

end

optimizeGame()

